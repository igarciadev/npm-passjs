{
  "name": "npm-passjs",
  "version": "1.0.0",
   "description": "Simple, lightweight adn customizable library for generating unique and secure passwords.",
   "main": "lib/index.js",
   "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igarciadev/npm-passjs.git"
  },
  "keywords": ["password", "generator", "random", "secure", "unique"],
  "author": "Isaac Garc√≠a",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/igarciadev/npm-passjs/issues"
  },
  "homepage": "https://github.com/igarciadev/npm-passjs#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "files": [
    "lib/**/*"
  ]
}
