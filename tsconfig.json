{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "lib": [
            "ES2015",
            "DOM"
        ],
        "outDir": "./lib",
        "strict": true,
        "sourceMap": true,
        "rootDir": "./src",
        "esModuleInterop": true,
        "noEmitOnError": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}